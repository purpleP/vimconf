[core]
    pager = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight | less
[user]
    email = warrior2031@gmail.com
    name = Michael Doronin
[diff]
    tool = vimdiff
[difftool]
    prompt = false
    path = vimdiff
[alias]
    d = difftool
    a = !sh -c 'git add -- "$@" && git status' --
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
[merge]
    tool = vimdiff
[mergetool]
    prompt = true
[mergetool "vimdiff"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J' --cmd "set bg=$(dark_or_light)"
[core]
    excludesfile = ~/.gitignore_global
    editor = nvim -c 'startinsert' --cmd \"set bg=$(dark_or_light)\"
[interactive]
    diffFilter = perl /usr/share/doc/git/contrib/diff-highlight/diff-highlight
[pager]
    log = true
    show = true
    diff = true
